@{
    ViewData["Title"] = "Add New Item";
}

<h1 class="text-center">Add New Item</h1>

<form asp-action="AddNewItem" method="post" class="border p-4 rounded shadow-sm">
    <div class="form-group mb-3">
        <label for="itemName" class="form-label fw-bold">Item Name:</label>
        <input type="text" id="itemName" name="itemName" class="form-control" required />
    
    </div>
    <div class="form-group mb-3">
        <label for="Description" class="form-label fw-bold">Item decription:</label>
        <input type="text" id="Description" name="Description" class="form-control"  />
    </div>
    <div class="form-group mb-3">
        <label for="Price" class="form-label fw-bold">Price:</label>
        <input type="text" id="Price" name="Price" class="form-control"  />
    </div>
    <div class="form-group mb-3">
        <label for="totalQuantity" class="form-label fw-bold">Total Quantity:</label>
        <input type="number" id="totalQuantity" name="totalQuantity" class="form-control" min="1" required />
    </div>
    <h5>Assign Quantities to Stocks</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Stock</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in ViewBag.Stocks)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="stockIds" value="@stock.StockId" /> @stock.StockName (@stock.City)
                    </td>
                    <td>
                        <input type="number" name="quantities" class="form-control" min="0" value="0" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Add New Item</button>
</form>
