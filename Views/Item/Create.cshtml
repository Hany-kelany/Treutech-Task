<form asp-action="Create" method="post" class="border p-4 rounded shadow-sm">
    <div class="form-group mb-3">
        <label for="itemSelector" class="form-label fw-bold">اختر العنصر:</label>
        <select id="itemSelector" name="ItemId" class="form-control" required>
            <option value="" selected>-- اختر العنصر --</option>
            @foreach (var item in ViewBag.Items)
            {
                <option value="@item.ItemId">@item.ItemName (المتاح: @item.TotalQuantity)</option>
            }
        </select>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>المخزن</th>
                <th>الكمية المراد إضافتها</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in ViewBag.Stocks)
            {
                <tr>
                    <td>
                        <input type="checkbox" id="stock_@stock.StockId" name="StockIds" value="@stock.StockId" class="form-check-input" />
                        <label for="stock_@stock.StockId" class="form-check-label">
                            @stock.StockName (@stock.City)
                        </label>
                    </td>
                    <td>
                        <input type="number" id="quantity_@stock.StockId" name="Quantities" class="form-control" min="0" value="0" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary mt-3">إضافة الكميات</button>
</form>

